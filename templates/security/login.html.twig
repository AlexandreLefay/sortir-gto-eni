{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block main %}
<div id="connexion-background">
        <div class="row container-fluid">
            <div class="col-md-5">
                <div class="row">
                    <img id="img-logo-connexion" src="{{ asset('img/logo-new-otter-hd.png') }}" alt="loutre gto welcome">
                    <h1 class="font-weight-normal animate-charcter">Les meilleures sorties de ta vie !</h1>
                </div>
                <div class="row">
                    <form method="post" id="connexion-form">
                        {% if error %}
                            <div class="alert alert-danger">{{ "Mot de passe ou identifiant incorrect" }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                            </div>
                        {% endif %}
                        <h2>Connecte-toi!</h2>
                        <label for="inputEmail" >Email</label>
                        <input type="email" value="{{app.request.cookies.get('mail')}}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>

                        {#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                        {#        See https://symfony.com/doc/current/security/remember_me.html#}

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>

                        <hr>
                        <button type="submit">Connexion</button>
                    </form>
                    </div>

            </div>

            <div class="col-md-7">
                <div class="text-end">
                   <img id="img-connexion" src="{{ asset('img/gto-bk-connexion.png') }}" alt="loutre gto">
                </div>
            </div>
        </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}New Sortie{% endblock %}

{% block stylesheets %}
    <script src="{{ asset('js/map.js') }}" defer></script>
{% endblock %}

{% block main %}
<main>
    <div class="row container-fluid">
        <div class="row">
            <h1>Ajouter un nouveau lieu</h1>
        </div>
    {{ form_start(formLieu) }}
        <div class="row">{{ form_row(formLieu.nom)}}</div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                {{ form_row(formLieu.rue)}}
            </div>
            <div class="col-md-6 col-xs-12">
                {{ form_row(formLieu.ville) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                {{ form_row(formLieu.latitude) }}
            </div>
            <div class="col-md-6 col-xs-12">
                {{ form_row(formLieu.longitude) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12"><div id="map"></div></div>
            <div class="col-md-6 col-xs-12"><button class="button-52">{{ button_label|default('Save') }}</button></div>
        </div>
    {{ form_end(formLieu) }}
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <button class="button-52"> <a href="{{ path('app_sortie_index') }}">back to list</a></button>
            </div>
        </div>
    </div>
</main>
    <script src="https://unpkg.com/leaflet@1.9.2/dist/leaflet.js"
            integrity="sha256-o9N1jGDZrf5tS+Ft4gbIK7mYMipq9lqpVJ91xHSyKhg="
            crossorigin=""></script>
{% endblock %}

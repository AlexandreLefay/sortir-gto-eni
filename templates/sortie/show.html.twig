{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block main %}
    <div class="row sortie-detail">
        <div class="col-md-6">
            <div class="row">ID : {{ sortie.id }}</div>
            <div class="row">Nom de la sortie : {{ sortie.nom }}</div>
            <div class="row">Date et heure de la sortie : {{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i:s') : '' }}</div>
            <div class="row">Date limite d'inscription : {{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i:s') : '' }}</div>
            <div class="row">Duree: {{ sortie.duree }}</div>
            <div class="row">Description et infos : {{ sortie.descriptionsInfos }}</div>
        </div>
        <div class="col-md-6">
            <div class="row">
                {{ sortie.lieu.nom}}
            </div>
            <div class="row">
                {{ sortie.lieu.rue}}
            </div>
            <div class="row">
                {{ sortie.lieu.ville.nom}}
            </div>
            <div class="row">
                {{ sortie.lieu.ville.codePostal}}
            </div>
            <div class="row">
                {{ sortie.lieu.latitude}}
            </div>
            <div class="row">
                {{ sortie.lieu.longitude}}
            </div>
        </div>
    </div>

    <div class="row"> <button class="button-52"  id="bnt-backtolist" role="button">  <a href="{{ path('app_sortie_index') }}">back to list</a></button> </div>
    <div class="row">
        <div class="col-md-6">
            <button class="button-52" role="button"> <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">edit</a></button>
        </div>
        <div class="col-md-6">
            {{ include('sortie/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="row sortie-participants">
        <h2>Liste des participants inscrits :</h2>
        {# for item in Entity.attribut #}
        <table class="table">
            <tbody>
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
            </tr>
            {% for participant in sortie.users %}
                <tr>
                    <td>{{ participant.pseudo}} </td>
                    <td>{{ participant.nom}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block main %}
    <h1>Welcome to Grand Theft Otter !</h1>
    <div class="row">
        {% if app.user %}
            <div class="col-md-3 offset-md-9">
                <div>
                    Date du jour : {{ 'now'|date('d - m -Y') }}
                </div>
                <div>
                    Participant : {{ app.user.pseudo }}
                </div>
            </div>
        {% endif %}
    </div>
    <div class="row">
        <h2>Filtrer les sorties</h2>
        <form action="" method="post" id="filtresSortie">
            <fieldset>
                <div class="row">
                    <div class="col-6">
                        <div class="row form-group">
                            <label class="col-xs-2" for="select-site">Sites</label>
                            <select class="form-control col-xs-2" id="select-site">
                                <option value="1">SAINT-HERBLAIN</option>
                                <option value="2">SAINT-SEBASTIEN</option>
                                <option value="3">NANTES</option>
                            </select>
                        </div>
                        <div class="row form-group">
                            <label class="col-xs-2" for="searchbarName">Le nom de la sortie contient :</label>
                            <input class="form-control col-xs-2" id="searchbarName" type="text" placeholder="Search..">
                        </div>
                        <div class="row form-group">
                            <p>
                                Entre
                                <input type="date" id="date-debut-sorti" name="date-debut-sortie">
                                et
                                <input type="date" id="date-fin-sortie" name="date-fin-sortie">
                            </p>
                        </div>
                    </div>
                    <div class="col-4">
                        <div>
                            <input type="checkbox" id="s-orga" name="sortie-organisateur">
                            <label for="s-orga">Sortie dont je suis l'organisateur/trice</label>
                        </div>
                        <div>
                            <input type="checkbox" id="s-inscrit" name="sortie-inscrit">
                            <label for="s-inscrit">Sorties auxquelles je suis inscrit</label>
                        </div>
                        <div>
                            <input type="checkbox" id="s-pas-inscrit" name="sortie-pas-inscrit">
                            <label for="s-pas-inscrit">Sorties auxquelles je ne suis pas inscrit</label>
                        </div>
                        <div>
                            <input type="checkbox" id="s-fini" name="sortie-terminees">
                            <label for="s-fini">Sortie passées</label>
                        </div>
                    </div>
                    <div class="col-2">
                        <button class="button-53" type="submit">Rechercher</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="scroll">
        <table class="table">
            <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                {# <th>Duree</th> #}
                <th>Clôture</th>
                <th>inscrits/place</th>
                {# <th>DescriptionsInfos</th> #}
                {# <th>UrlPhoto</th> #}
                <th>Etat</th>
                <th>inscrit</th>
                <th>Organisateur</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    {# <td>{{ sortie.id }}</td> #}
                    <td class="tab-sortie-nom">{{ sortie.nom }}</td>
                    <td class="tab-sortie-date">{{ sortie.dateDebut ? sortie.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                    {# <td>{{ sortie.duree }}</td> #}
                    <td class="tab-sortie-date">{{ sortie.dateCloture ? sortie.dateCloture|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                    {# <td>{{ sortie.descriptionsInfos }}</td> #}
                    {# <td>{{ sortie.urlPhoto }}</td> #}
                    <td>{{ sortie.etat.libelle }}</td>
                    <td>X</td>
                    <td><a href="{{ path('app_profil_view',{'id':sortie.user.id}) }}">{{ sortie.user.pseudo }}</a></td>
                    <td>
                        <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}"><img class="icon"
                                                                                        src="{{ asset('img/afficher.svg') }}"
                                                                                        alt="Afficher"></a>
                        <a href="{{ path('app_sortie_inscription', {'id': sortie.id}) }}"><img class="icon"
                                                                                               src="{{ asset('img/inscrire.svg') }}"
                                                                                               alt="S'inscrire"></a>
                        <a href=""><img class="icon" src="{{ asset('img/desister.svg') }}" alt="Se désister"></a>
                        <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}"><img class="icon"
                                                                                        src="{{ asset('img/modifier.svg') }}"
                                                                                        alt="Modifier"></a>
                        <a href=""><img class="icon" src="{{ asset('img/annuler.svg') }}" alt="Annuler"></a>
                        <a href=""><img class="icon" src="{{ asset('img/publish.svg') }}" alt="Publier"></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <button class="button-52" role="button"><a href="{{ path('app_sortie_new') }}">Create new</a></button>

{% endblock %}
